{
	"compilerOptions": {
		// File Layout
		"rootDir": "./",
		"outDir": "./dist",

		// Environment Settings
		"module": "node20",
		"target": "ES2022",
		"types": ["node"],

		// Outputs
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false, // ensure JS + types are emitted

		// Type Safety
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "util", "controllers", "events", "comment-renderer", "renderers", "*.d.ts"],
	"exclude": ["node_modules", "dist"]
}
